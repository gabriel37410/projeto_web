<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('imports'); -%>
  </head>

  <body>
    <%- include('navbar'); -%>

    <div class="container"> 
        <div class="row">
            <% luzs.forEach((item) => { %>
                <div class="borda tam">
                    <h1 class="margemdom"><%= item.nome %></h1> 
                    <br>
                    <h3 class="margemdom"><button type="button" class="btn btn-secondary">Ligar</button></h3>
                </div>
            <% }); %>

            <% temps.forEach((item) => { %>
                <div class="borda tam">
                    <h1 class="margemdom"><%= item.nome %></h1> 
                    <br>
                    <h3 class="margemdom">Temperatura: <%= item.temperatura %> graus</h3>
                    <h3 class="margemdom">Umidade: <%= item.umidade %>%</h3>
                </div>
            <% }); %>

        </div>
    </div>

  </body>
</html>
