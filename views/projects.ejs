<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <%- include('imports'); -%>
    </head>
  
    <body>
        <%- include('navbar'); -%>

        <% lista_projects.forEach((lista_projects) => { %>
        <div class="card mb-3" style="max-width: 700px;">
            <div class="row no-gutters">        
                <div class="col-md-4">
                    <img src="<%= `/images/${lista_projects.image}` %>" class="card-img">
                </div>
            
                <div class="col-md-8">
                    <div class="card-body">
                    <h5 class="card-title">
                        <%= lista_projects.name %>
                    </h5>

                    <a href="/projects/<%= lista_projects.id %>" class="btn btn-primary">Ler mais</a>

                    </div>
                </div>
            </div>
        </div>
      <% }); %>
    </body>
</html>