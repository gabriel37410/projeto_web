<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Temperaturas</title>
  <%- include('../../imports'); -%>
</head>
<body>
  <%- include('../../navbar'); -%>
  
  <div class="container">
    <div class="row">
        <h1>Administração de Sensores</h1>
    </div>

    <div class="row mb-2">
        <a href="/admin/temps/create" class="btn btn-success">Novo Sensor</a>
    </div>
    
    <div class="row">
        <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Código</th>
                <th scope="col">Nome</th>
                <th scope="col">Temperatura</th>
                <th scope="col">Umidade</th>
              </tr>
            </thead>
            <tbody>
              <% temps.forEach ((temp) => { %>
                <tr>
                  <td><%= temp.id %></td>
                  <td><%= temp.nome %></td>
                  <td><%= temp.tipo1 %>: <%= temp.valor1 %> graus</td>
                  <td><%= temp.tipo2 %>: <%= temp.valor2 %>%</td>
                </tr>
              <% }); %>       
            </tbody>
          </table>
    </div>
  </div>

</body>
</html>
